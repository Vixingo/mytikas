<!-- sample modal content -->
<div id="myModaladd" class="modal" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myModalLabel">
                    New Lead
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-purple">

                <form class="row g-3" id="newLeadForm">
                    <div class="col-md-6">
                        <label for="companyname" class="form-label">Company Name</label>
                        <input type="text" class="form-control" id="companyName" name="companyName"
                            placeholder="e.g: Mytikas" required>
                    </div>
                    <div class="col-md-6">
                        <label for="contactName" class="form-label">Contact Name</label>
                        <input type="text" class="form-control" id="contactName" name="contactName"
                            placeholder="e.g. Steli Efti" required>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary waves-effect" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="submit" form="newLeadForm" class="btn btn-success waves-effect waves-light">
                    Create Lead
                </button>
            </div>
        </div>
    </div>
</div>
<!-- /.modal -->